{
  "name": "Visa Scanner Design System",
  "colors": {
    "primary": "#007AFF",
    "success": "#4CAF50",
    "warning": "#FFC107",
    "error": "#F44336",
    "text": {
      "primary": "#333333",
      "secondary": "#666666",
      "tertiary": "#999999"
    },
    "background": {
      "primary": "#FFFFFF",
      "secondary": "#F5F5F5",
      "overlay": "rgba(0, 0, 0, 0.5)"
    }
  },
  "typography": {
    "h1": {
      "fontSize": 24,
      "fontWeight": "bold",
      "lineHeight": 32
    },
    "h2": {
      "fontSize": 20,
      "fontWeight": "bold",
      "lineHeight": 28
    },
    "body": {
      "fontSize": 16,
      "fontWeight": "regular",
      "lineHeight": 24
    },
    "caption": {
      "fontSize": 14,
      "fontWeight": "regular",
      "lineHeight": 20
    }
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32
  },
  "borderRadius": {
    "sm": 4,
    "md": 8,
    "lg": 12,
    "xl": 16
  },
  "shadows": {
    "small": {
      "color": "#000000",
      "opacity": 0.1,
      "offset": { "x": 0, "y": 2 },
      "radius": 4
    },
    "medium": {
      "color": "#000000",
      "opacity": 0.15,
      "offset": { "x": 0, "y": 4 },
      "radius": 8
    },
    "large": {
      "color": "#000000",
      "opacity": 0.2,
      "offset": { "x": 0, "y": 8 },
      "radius": 16
    }
  }
} 